<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PM2AD1.InfoPersonaPage">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Información Personal" FontSize="26" Padding="10,0,30,0" FontAttributes="Bold"/>
         
            <StackLayout Orientation="Horizontal">
                <Label Text="Name:" HorizontalOptions="Fill" Padding="10,0,0,0" FontSize="22"/>
                <Label Text="{Binding Nombre}" FontSize="22" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Apellidos:" Padding="10,0,0,0" FontSize="22"/>
                <Label Text="{Binding Apellidos}" FontSize="22" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Edad:" Padding="10,0,0,0" FontSize="22"/>
                <Label Text="{Binding Edad}" FontSize="22" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Correo:" Padding="10,0,0,0" FontSize="22"/>
                <Label Text="{Binding Correo}" FontSize="22" FontAttributes="Bold"/>
            </StackLayout>
        </StackLayout>


        
    </ContentPage.Content>
</ContentPage>
