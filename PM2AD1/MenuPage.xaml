<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PM2AD1.MenuPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="PM2 UTH" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Seleccione la aplicación a utilizar" FontSize="16" Padding="30,0,30,0"/>

            <Button x:Name="btnAppOpe" Text="Suma de Numeros" BackgroundColor="CornflowerBlue" TextColor="White" Clicked="btnAppOpe_Clicked"></Button>
            <Button x:Name="btnAppPer" Text="Información Personal" BackgroundColor="DarkCyan" TextColor="White" Clicked="btnAppPer_Clicked"></Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
